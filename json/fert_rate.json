{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Fertility Rate by Year",
        "fontSize": 20,
        "font": "Amiko"
    },
    "data": {
        "url": "data/fertility_rate.csv",
        "format": {
            "type": "csv"
        }
    },
    "mark": {
        "type": "area",
        "strokeWidth": 3 
    },
    "encoding": {
        "x": {
            "field": "Year",
            "type": "temporal", 
            "axis": {
                "title": "Year",
                "labelFont": "Amiko",
                "titleFont": "Amiko"
            }
        },
        "y": {
            "field": "Fertility Rate",
            "type": "quantitative",
            "axis": {
                "title": "Fertility Rate",
                "labelFont": "Amiko",
                "titleFont": "Amiko"
            }
        },
        "tooltip": [
            {
                "field": "Year",
                "type": "temporal",
                "title": "Year",
                "format": "%Y"

            },
            {
                "field": "Fertility Rate",
                "type": "quantitative",
                "title": "Fertility Rate",
                "format": ".1f"
            }
        ]
    }
}
